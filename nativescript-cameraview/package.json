{
    "name": "nativescript-cameraview",
    "version": "1.0.0",
    "description": "CameraView plugin.",
    "main": "./index",
    "typings": "./index.d.ts",
    "nativescript": {
        "platforms": {
            "android": "3.0.0",
            "ios": "3.0.0"
        }
    },
    "scripts": {
        "setup": "ts-patch install",
        "prepare": "npm run setup",
        "tsc": "cp src/index.d.ts plugin && tsc -skipLibCheck -d",
        "clean": "rimraf ./plugin/**/*.d.ts ./plugin/**/*.js ./plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "build.plugin": " cp README.md plugin/ && rm -f .tsbuildinfo && npm run tsc",
        "build.android": "bash src-native/android/build.sh",
        "build.ios": "bash src-native/ios/build.sh",
        "build.native": "npm run build.android && npm run build.ios",
        "build": "npm run build.plugin",
        "publish": "npm run setup && npm run build && lerna publish --create-release=github --force-publish",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "keywords": [
        "NativeScript",
        "JavaScript",
        "Android",
        "iOS"
    ],
    "author": {
        "name": "Theophile Batoz",
        "email": "theophile.batoz@kanso.ink"
    },
    "license": "Apache-2.0",
    "readmeFilename": "README.md",
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@nativescript/core": "8.2.0",
        "@nativescript/types-android": "8.2.0",
        "@nativescript/types-ios": "8.2.1",
        "@nativescript/webpack": "5.0.6",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "eslint": "8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lerna": "^4.0.0",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-patch": "^2.0.1",
        "typescript": "~4.6.2"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
