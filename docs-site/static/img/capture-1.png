<svg xmlns="http://www.w3.org/2000/svg" width="300" height="600" viewBox="0 0 300 600">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2e8555;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#205d3b;stop-opacity:1" />
    </linearGradient>
  </defs>
  <!-- Background -->
  <rect width="300" height="600" fill="url(#bg)"/>
  <!-- Phone frame -->
  <rect x="20" y="20" width="260" height="560" rx="20" fill="#1a1a1a"/>
  <!-- Screen -->
  <rect x="30" y="50" width="240" height="500" fill="#f5f5f5"/>
  <!-- Camera viewfinder -->
  <rect x="50" y="100" width="200" height="300" fill="#333" stroke="#25c2a0" stroke-width="3"/>
  <!-- Document outline -->
  <polygon points="80,150 220,140 230,350 70,360" fill="none" stroke="#4fddbf" stroke-width="2" stroke-dasharray="5,5"/>
  <!-- Corner markers -->
  <circle cx="80" cy="150" r="8" fill="#25c2a0"/>
  <circle cx="220" cy="140" r="8" fill="#25c2a0"/>
  <circle cx="230" cy="350" r="8" fill="#25c2a0"/>
  <circle cx="70" cy="360" r="8" fill="#25c2a0"/>
  <!-- Capture button -->
  <circle cx="150" cy="480" r="35" fill="none" stroke="#333" stroke-width="3"/>
  <circle cx="150" cy="480" r="28" fill="#25c2a0"/>
  <!-- Status bar -->
  <rect x="30" y="50" width="240" height="30" fill="#fff"/>
  <text x="150" y="70" text-anchor="middle" font-family="Arial" font-size="12" fill="#333">Capture Mode</text>
  <!-- Placeholder text -->
  <text x="150" y="550" text-anchor="middle" font-family="Arial" font-size="10" fill="#999">Placeholder - Replace with Maestro screenshot</text>
</svg>
